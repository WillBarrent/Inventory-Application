<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <%- include('../templates/styles') %>
</head>

<body>
  <div class="update-trainer">
    <a href="/trainers" class="update-trainer__back-link">Back to Trainers Page</a>
    <form action="/trainers/update/<%= trainerId %>" method="post" class="update-trainer__form">
      <ul class="update-trainer__errors"><% errors.forEach(function(error) { %>
        <li update-trainer__error><%= error.msg %></li>
        <% }); %></ul>
      <h2 class="update-trainer__form--title"><%= title %></h2>
      <div class="update-trainer__name">
        <label for="name" class="update-trainer__name--label">Trainer's Name</label>
        <input type="text" value="<%= trainerName %>" class="update-trainer__name--input" id="name" name="trainer_name">
      </div>
      <button type="submit">Update</button>
    </form>
  </div>
</body>

</html>